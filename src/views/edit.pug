extends base.pug


block content
    h4 Update Video
    form(method="POST")
        input(name="title" placeholder="Video title", value=video.title, required, type="text" )
        input(name="description" placeholder="Description", required, type="text", minlength=20, value=video.description)
        input(name="hashtags" placeholder="Hashtags, seperate dbu comma.", required, type="text", value=video.hashtags.join())
        input(value="Save", type="submit")
